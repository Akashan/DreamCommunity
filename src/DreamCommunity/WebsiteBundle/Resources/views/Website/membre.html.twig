{% extends "::layout.html.twig" %}

{% block title %}
    Membre - {{ membre.nom }} - {{ parent() }}
{% endblock %}

{% block dream_page_title %}
{{ membre.nom }}
{% endblock %}

{% block dream_contenu %}
        <div class="row-fluid">
            <div class="span12">
                <div class="row-fluid">
                    <div class="span2">
                        {% if "http" in membre.image %}
                            <img src="{{ membre.image }}" class="left" style="border:1px solid #000" />
                        {% else %}
                            <img src="{{ asset('img/uploads/users/' ~ membre.image) }}" class="left" style="border:1px solid #000"/>
                        {% endif %}
                    </div>
                    <div class="span10">
                        {{ membre.description }}
                    </div>
                </div>
            </div>
        </div>
        <div class="row-fluid" style="margin-top: 5px;">
            <div class="span12">
                Liens :
                {% if membre.urlYoutube is not null %}<a href="{{ membre.urlYoutube }}"><img src="{{ asset('img/youtube.png') }}" /></a>&nbsp;{% endif %}
                {% if membre.urlTwitter is not null %}<a href="{{ membre.urlTwitter }}"><img src="{{ asset('img/twitter.png') }}" /></a>&nbsp;{% endif %}
                {% if membre.urlFacebook is not null %}<a href="{{ membre.urlFacebook }}"><img src="{{ asset('img/facebook.png') }}" /></a>&nbsp;{% endif %}
                {% if membre.urlOther is not null %}<a href="{{ membre.urlOther }}"><img src="{{ asset('img/www.png') }}" /></a>&nbsp;{% endif %}
            </div>
        </div>
        <div class="row-fluid">
            <div class="span12">
                {% if is_granted('ROLE_SUPER_ADMIN') %}
                    <a href="{{ path('dream_community_website_modif_membre', {'id': membre.id}) }}">Modifier un membre</a> -
                {% endif %}
                <a href="{{ path('dream_community_website_membres') }}">Retour</a>
            </div>
        </div>
{% endblock %}